
    <section id="loginsection" > <!-- form cannot be used since it will place the inserted values in the link. Using action will send user to the link. Instead it is handled with ajax in javascripts/register.js-->
        <div class="input">
            <label>First Name</label>
            <input class="inputlabel"  type="text" id="firstname" placeholder="your first name" required>
        </div>
        <div class="input">
            <label>SurName</label>
            <input class="inputlabel" type="text" id="surname" placeholder="your surname" required>
        </div>
        <div class="input">
            <label>Email</label>
            <input class="inputlabel" type="email" id="email" placeholder="your email address" required>
        </div>
        <div class="input">
            <label>Username</label>
            <input class="inputlabel" type="text" id="username" placeholder="your login name" required>
        </div>
        <div class="input">
            <label>Password</label>
            <input class="inputlabel" type="password" id="password" name="password" placeholder="your password" required>
        </div>
        <div class="input">
            <label>Confirm Password</label>
            <input class="inputlabel" type="password" id="confirmPassword" name="confirmPassword" placeholder="confirm your password">
        </div>

        <button class="profilebutton" onclick="register()">Sign up</button>
    </section>
