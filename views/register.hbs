
<h1>{{ title }}</h1>
{{# if success }}
    <section class="success">
        <h2>Succesfull validation</h2>
    </section>
{{ else }}
    {{# if errors}}
        <section class="errors">
            <ul>
                {{# each errors}}
                    <li>
                        {{this.msg}}
                    </li>
                {{/each}}
            </ul>
        </section>
    {{/if}}
    <form name="login" action="/api/register" method="post">
        <div class="input">
            <label>First Name</label>
            <input type="text" id="firstname" name="firstname" placeholder="your first name">
        </div>
        <div class="input">
            <label>SurName</label>
            <input type="text" id="surname" name="surname" placeholder="your surname">
        </div>
        <div class="input">
            <label>Email</label>
            <input type="text" id="email" name="email" placeholder="your email address">
        </div>
        <div class="input">
            <label>Username</label>
            <input type="text" id="username" name="username" placeholder="your login name">
        </div>
        <div class="input">
            <label>Password</label>
            <input type="password" id="password" name="password" placeholder="your password">
        </div>
        <div class="input">
            <label>Confirm Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" placeholder="confirm your password">
        </div>

        <button type="submit" >Sign up</button>
    </form>
{{/if}}